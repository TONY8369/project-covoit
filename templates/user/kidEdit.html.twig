{% extends "base.html.twig" %}
{% block title %}SymCovoit - Edition{% endblock %}
{% block body %}

<div class="container">
    <h1 class="mt-4">Modifier les détails des enfants</h1>

    <form action="{{ path('kid_edit_post') }}" method="post">
    {# { id: userId})  #}
    {# {{ dump(variable) }}#}
   
         {% for userKid in userKids %}
         <div class="form-group">
                <label for="id[]" class="form-label mt-4"><font style="vertical-align: inherit;"></font></label>
                    <input type="hidden" class="form-control" id="{{userKid.id}}" name="id[]" value="{{ userKid.id}}">
        </div>

         <div class="form-group">
                <label for="firstname[]" class="form-label mt-4"><font style="vertical-align: inherit;">Modifier le prénom</font></label>
                    <input type="text" class="form-control" id="{{userKid.id}}" name="firstname[]" placeholder="{{ userKid.firstname}}">
             </div>
            <div class="form-group">
                <label for="lastname[]" class="form-label mt-4"><font style="vertical-align: inherit;">Modifier le nom</font></label>
                    <input type="text" class="form-control" id="{{userKid.id}}" name="lastname[]" placeholder="{{ userKid.lastname}}">
            </div>
            
        {% endfor %}
         <div class="form-group mt-4">
            <input type="submit" method="POST" value="Modifier" class="btn btn-primary"><font style="vertical-align: inherit;"></font></input>
        </div> 
        
    </form>
</div>
{% endblock %}