{% extends 'base.html.twig' %}

{% block title %}SymCovoit - Enfants{% endblock %}

{% block body %}
<div class="container">
{% if not kids.items is same as([]) %}

    <h1 class="mt-4 text-center">Listes des enfants</h1>


    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{message}}
    </div>
    {% endfor %}

    <div class="count mt-4">
        <h4>Il y a : {{kids.getTotalItemCount}} Enfant{{ (kids.getTotalItemCount) > 1 ? 's' : ''}} au total.</h4> 
    </div>

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col" class="text-center">Numero</th>
                <th scope="col" class="text-center">Nom</th>
                <th scope="col" class="text-center">Prenom</th>
                <th scope="col" class="text-center">Date de Naissance</th>
                <th scope="col" class="text-center">Information</th>
                <th scope="col" class="text-center">Date de creation</th>
                <th scope="col" class="text-center">Date de mise Ã  jour</th>
                <th scope="col" class="text-center">Edition</th>
                <th scope="col" class="text-center">Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for kid in kids %}
            <tr class="table-primary">
                <th scope="row" class="text-center">{{kid.id}}</th>
                <td class="text-center">{{kid.firstname}}</td>
                <td class="text-center">{{kid.lastname}}</td>
                <td class="text-center">{{kid.anniversary|date('d/m/y')}}</td>
                <td class="text-center">{{kid.comment}}</td>
                <td class="text-center">{{kid.created_at|date('d/m/y')}}</td>
                <td class="text-center">{{kid.updated_at|date('d/m/y')}}</td>
                <td class="text-center"><a href="{{ path('kid_edit', { id: kid.id}) }}" class="btn btn-info">Modifier</a></td>
                <td class="text-center"><a href="{{ path('kid_delete', { id: kid.id}) }}" class="btn btn-warning">Supprimer</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center">
        {{knp_pagination_render(kids)}}
    </div>
    {% else %}
        <h4>Il n'y a pas d'enfants</h4>
    {% endif %}

</div>
{% endblock %}