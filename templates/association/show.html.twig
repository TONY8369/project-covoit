{% extends 'base.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}
    <h1>Association</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ association.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ association.text }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
